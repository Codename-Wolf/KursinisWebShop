<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="512.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kursinis.kursinis.fxControllers.CommentsWindowController">
   <children>
      <TreeView fx:id="commentTree" layoutX="19.0" layoutY="14.0" prefHeight="324.0" prefWidth="562.0" />
      <TextField fx:id="commentTextField" layoutX="18.0" layoutY="379.0" prefHeight="110.0" prefWidth="389.0" promptText="Your comment..." />
      <Slider fx:id="ratingSlider" blockIncrement="1.0" layoutX="427.0" layoutY="379.0" majorTickUnit="1.0" max="5.0" min="1.0" minorTickCount="0" showTickLabels="true" snapToTicks="true" />
      <Button fx:id="commentButton" layoutX="438.0" layoutY="421.0" mnemonicParsing="false" onAction="#submitComment" prefHeight="25.0" prefWidth="118.0" text="Comment" />
      <Button fx:id="refreshButton" layoutX="438.0" layoutY="463.0" mnemonicParsing="false" onAction="#readComments" prefHeight="25.0" prefWidth="118.0" text="Refresh Comments" />
      <Button fx:id="deleteButton" layoutX="18.0" layoutY="346.0" mnemonicParsing="false" onAction="#deleteComment" prefHeight="25.0" prefWidth="162.0" text="Delete selected comment" visible="false" />
   </children>
</AnchorPane>
